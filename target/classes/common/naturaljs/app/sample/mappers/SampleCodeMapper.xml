<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="common.naturaljs.app.sample.mappers.SampleCodeMapper">

    <select id="getSampleCodeList" parameterType="java.util.Map" resultType="java.util.Map">
        /* common.naturaljs.app.sample.mappers.SampleMapper.getSampleList */
        SELECT *
          FROM sample_code
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test="codes != null">
                AND code IN
                <foreach item="code" index="index" collection="codes" open="(" separator="," close=")">
                    #{code}
                </foreach>
            </if>
        </trim>
    </select>

    <select id="getSampleCodeCompanyList" parameterType="java.util.Map" resultType="java.util.Map">
        /* common.naturaljs.app.sample.mappers.SampleMapper.getSampleCodeCompanyList */
        SELECT *
          FROM sample_code
         WHERE code = 'company'
        <if test="company != null and company != ''">
            AND val like UPPER('%' || #{company} || '%')
        </if>
    </select>

</mapper>